            </intent-filter>
        </activity>

        <activity
            android:name=".Register"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".MainEventsActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" />

        <activity
            android:name=".CreateEvent_1"
